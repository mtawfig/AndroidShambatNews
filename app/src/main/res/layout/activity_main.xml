<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:weightSum="6"
    android:background="@drawable/bluewallpaper"
    tools:context="apps.mtawfig.com.shambatbreakingnewsapplication.MainActivity">

    <Button
        android:id="@+id/btnGotoNewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@android:drawable/ic_menu_send"
        android:onClick="gotoSmsActivity"
        android:padding="10dp"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:text="رسالة جديدة" />

    <Button
        android:id="@+id/btnGotoSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@android:drawable/ic_popup_sync"
        android:onClick="gotoSyncContactsActivity"
        android:padding="10dp"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:text="تحديث جهات الإرسال" />

    <Button
        android:id="@+id/btnGotoArchive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@android:drawable/ic_menu_recent_history"
        android:padding="10dp"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:text="عرض الرسائل القديمة" />

</LinearLayout>
